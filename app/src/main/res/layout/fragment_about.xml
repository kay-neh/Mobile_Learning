<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frame_color"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textAppearance="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:layout_margin="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/card_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_description_post_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/profile_text_color"
                android:textSize="16sp"
                tools:text="This course covers the systematic design of advanced digital systems using field-programmable gate arrays (FPGAs). The emphasis is on top-down design starting with a software application, and translating it to high-level models using a hardware description language (such as VHDL or Verilog)."/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecturers"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_margin="16dp"/>

        <!--cardview 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="@color/card_color"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@android:color/white"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                card_view:cardCornerRadius="25dp">
                -->
                <ImageView
                    android:id="@+id/lecturer_photo_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/round_account_circle_24"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    />
                <!--
                            </androidx.cardview.widget.CardView>
                -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/lecturer_name_1_post_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/profile_text_color"
                        tools:text="Engr. Dr. E. Olaye"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--cardview 2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/lecturer_card_2_post_reg"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:backgroundTint="@color/card_color"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@android:color/white"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                card_view:cardCornerRadius="25dp">
                -->
                <ImageView
                    android:id="@+id/lecturer_photo_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/round_account_circle_24"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    />
                <!--
                            </androidx.cardview.widget.CardView>
                -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/lecturer_name_2_post_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/profile_text_color"
                        tools:text="Engr. E. Eguagie"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--cardview 3-->
        <androidx.cardview.widget.CardView
            android:id="@+id/lecturer_card_3_post_reg"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:backgroundTint="@color/card_color"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@android:color/white"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                card_view:cardCornerRadius="25dp">
                -->
                <ImageView
                    android:id="@+id/lecturer_photo_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/round_account_circle_24"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    />
                <!--
                            </androidx.cardview.widget.CardView>
                -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/lecturer_name_3_post_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/profile_text_color"
                        tools:text="Engr. James O."
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </LinearLayout>
</FrameLayout>